<body>
    <div class="head">
        <span class="bg"></span>
        <span class="bg2"></span>
        <div class="form-box login">
            <h2 >SignUp</h2>
            <form action="/signup" method="post"  onsubmit="myFunc()">
                <div class="input">
                    <input type="text" id="hcheck" name="email" required> 
                    <label>Username</label>
                    <i class='bx bxs-user'></i>
                </div>
